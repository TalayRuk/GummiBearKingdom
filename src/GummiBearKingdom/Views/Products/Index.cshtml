@model IEnumerable<GummiBearKingdom.Models.Product>

@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Type)
        </th>
        <th></th>
    </tr>

    @foreach (var listProduct in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelProduct => listProduct.Name)
            </td>
            <td>
                @Html.DisplayFor(modelProduct => listProduct.Category.Type)
            </td>
            <td>

                    @Html.DisplayFor(modelItem => listProduct.Name) |
                    @Html.ActionLink("Details", "Details", new { id = listProduct.ProductId }) |
                    @Html.ActionLink("Edit", "Edit", new { id = listProduct.ProductId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = listProduct.ProductId })
                
            </td>
        </tr>
    }
</table>

<h4>@Html.ActionLink("Add new product", "Create")</h4>

